<% @posts.each do |p| %>
		<div class="row post">
				<% if p.image_file_name %> 

			<!-- photos -->
			<div class="col-sm-7 col-sm-push-5 photo-column">
				<%= image_tag p.image.url(:original), class: "img-responsive img-rounded img-profile"%>		
				<div class="post-details">

					<%= link_to "Comment", new_post_comment_path(p), class: "btn btn-success", type: "button" %>
					<%= link_to "Show", p, class: "btn btn-success", type: "button" %>
					 <br>

					  Posted by <%= link_to p.user_id  %>
					  <%= distance_of_time_in_words_to_now(p.created_at) + " ago" %>

				</div>
			</div>
<% else %> 

			<div class="block-update-card">
				<div class="update-card-body">
				    <h4><%= p.title %></h4>

				    <p>
				     	<%= p.body %>
				    </p>
				    	<% end %>
				    	<div class="post-details">
					<%= link_to "Comment", new_post_comment_path(p), class: "btn btn-success", type: "button" %>
					<%= link_to "Show", p, class: "btn btn-success", type: "button" %>
					 <br>

					  Posted by <%= link_to p.user_id  %>
					  <%= distance_of_time_in_words_to_now(p.created_at) + " ago" %>

				</div>

		    	</div>
			</div>
		</div>	
		<!-- comments -->
		<%# if p.comments.count != 0 %>

	<% end %> 	  

