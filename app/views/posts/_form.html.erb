<div class="row">
  <div class="col-sm-8 col-sm-offset-2">


<h1>Add Content</h1>
<div class="well bs-component">
<%= form_for @post, html: { multipart: true, class: "custom" } do |f| %>

<form class="form">
  <fieldset>
    <div class="form-group">
      <label for="inputPicture" class="col-lg-2 control-label">Picture</label>
      <div class="col-lg-10">
      <% if @post.image.exists? %> 
      <%= image_tag @post.image.url(:small), class: "form-control", placeholder: "Picture" %> 
        <% end %> 
        <%= f.label :image, "Attach an image" %> </br> 
        <%= f.file_field :image %> 
      </div>
    </div>

    <div class="form-group">
      <label for="inputCaption" class="col-lg-2 control-label">Caption</label>
      <div class="col-lg-10">
        <%= f.text_field :body, class: "form-control", placeholder: "body" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputTag" class="col-lg-2 control-label">Tags</label>
      <div class="col-lg-10">
        <%= f.label :tag_list, placeholder: "Tags" %>
        <%= f.text_field :taggings, class: "form-control", placeholder: "Tags" %>
      </div>
    </div>
     
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to "Cancel", root_path, class: "btn btn-default" %>
        <%= f.submit class: "btn btn-primary btn-default", value: "Submit"%> 
      </div>
    </div>

  </fieldset>
</form>
<% end %>     
</div>
  </div>
</div>




